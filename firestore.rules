rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email == 'rileyjadamson@gmail.com';
    }
    
    function isAdmin() {
      return isSignedIn() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
    }
    
    function isScholar() {
      return isSignedIn() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'scholar' ||
         isAdmin());
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function canAddCommentary() {
      return isSignedIn() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['superadmin', 'admin', 'scholar']);
    }

    // Allow anyone to read verses, but only admins can write
    match /verses/{verseId} {
      allow read: if true;  // Everyone can read cached verses
      allow write: if isAdmin() || isSuperAdmin();  // Only admins can update cache
    }

    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin() || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // Commentary collection
    match /commentaries/{verseId} {
      allow read: if true;
      allow create, update: if canAddCommentary();
      allow delete: if isSuperAdmin();
    }

    // Commentary edits collection
    match /commentary_edits/{editId} {
      allow read: if true;
      allow create: if canAddCommentary();
      allow update: if false;  // Edits should be immutable
      allow delete: if isSuperAdmin();
    }

    // Commentary debates collection
    match /commentary_debates/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        // Allow users to edit their own posts
        request.auth.uid == resource.data.author.uid ||
        // Or if they're an admin
        isAdmin() || isSuperAdmin()
      );
      allow delete: if isSuperAdmin();
    }
  }
} 