{
  "hosting": {
    "target": "biblepedia-app",
    "public": ".next",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "nextjs",
          "region": "us-central1"
        }
      }
    ]
  },
  "functions": {
    "source": ".",
    "runtime": "nodejs20"
  }
} 